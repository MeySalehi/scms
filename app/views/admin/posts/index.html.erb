<h1>Admin::Posts#index</h1>
<p>Find me in app/views/admin/posts/index.html.erb</p>
<hr>
<p><%= link_to "New Post", new_admin_post_path %></p>
<hr>
<% if !flash[:notice].blank? %>
	<p style="color:green" ><%= flash[:notice] %></p>
	<hr>
<% end %>
<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Created at</th>
		<th>Comments</th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, edit_admin_post_path(post.id) %>|</td>
			<td><%= link_to post.user.full_name, admin_author_path(post.user.id) %> | </td>
			<td><%= post.created_at %> | </td>
			<th><%= link_to post.comments.count, admin_post_comments_path(post.id) %></th>
			<td><%=  %></td>
		</tr>
	<% end %>
</table>
<hr>
<% @page_num.times do |p| %>
	<% p = p + 1 %>
	<% if p == @current_page %>
	<b> [ <%= link_to p.to_s, pages_posts_path(p)  %> ] </b>
	<% else %>
		<%= link_to p.to_s, page_admin_posts_path(p)  %>
	<% end %>
<% end %>