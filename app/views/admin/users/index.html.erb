<h1>Admin::Users#index</h1>
<p>Find me in app/views/admin/users/index.html.erb</p>

<% @page_num.times do |p| %>
	<% p = p + 1 %>
	<% if p == @current_page %>
	<b> [ <%= link_to p.to_s, pages_posts_path(p)  %> ] </b>
	<% else %>
		<%= link_to p.to_s, page_admin_users_path(p)  %>
	<% end %>
<% end %>
<hr>
<table>
	<% @users.each do |user| %>
	<tr>
	<td><%= user.access_level.capitalize %></td>
	<td><%= link_to user.full_name, admin_user_path(user.username) %></td>
	<td><%= user.username %></td>
	<td><%= user.created_at %></td>
	<td><%= link_to user.public_email %></td>
	</tr>

	<% end %>
</table>
